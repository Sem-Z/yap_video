{

  "description": "Get direct link to yap video. Fuck you!",
  "manifest_version": 2,
  "name": "yap_filter",
  "version": "1.0",
  "icons": {
    "48": "icon-48.png",
	"96": "icon-96.png"
  },

  "permissions": [
    "webRequest", "webRequestBlocking", "tabs", "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }

}
